# ==================================
# BuddyStat White Label Configuration
# ==================================
# Copy this file to .env and customize with your settings

# ----------------------------------
# Database Configuration
# ----------------------------------
POSTGRES_DB=buddystat
POSTGRES_USER=buddystat_user
POSTGRES_PASSWORD=change_this_secure_password_123
DATABASE_URL=postgresql://buddystat_user:change_this_secure_password_123@postgres:5432/buddystat

# ----------------------------------
# Application URLs
# ----------------------------------
# Your production domain
NEXT_PUBLIC_APP_URL=https://your-domain.com
APP_URL=https://your-domain.com

# API endpoint (usually same domain or api subdomain)
NEXT_PUBLIC_API_URL=https://your-domain.com/api

# ----------------------------------
# Authentication & Security
# ----------------------------------
# Generate a strong random string for JWT secret
# Use: openssl rand -base64 32
JWT_SECRET=change_this_to_a_random_string_min_32_chars

# Session secret
SESSION_SECRET=another_random_string_for_sessions

# ----------------------------------
# White Label - Brand Identity
# ----------------------------------
NEXT_PUBLIC_BRAND_NAME=BuddyStat
NEXT_PUBLIC_BRAND_TAGLINE=Your Privacy-First Analytics Platform
NEXT_PUBLIC_BRAND_DESCRIPTION=Open source web analytics that respects user privacy

# Support contact
NEXT_PUBLIC_SUPPORT_EMAIL=support@your-domain.com
NEXT_PUBLIC_CONTACT_URL=https://your-domain.com/contact

# ----------------------------------
# White Label - Colors & Theme
# ----------------------------------
# Use Tailwind color names or hex codes
NEXT_PUBLIC_PRIMARY_COLOR=blue
NEXT_PUBLIC_ACCENT_COLOR=indigo
NEXT_PUBLIC_THEME_MODE=system

# ----------------------------------
# Social Links (Optional)
# ----------------------------------
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/yourcompany
NEXT_PUBLIC_GITHUB_URL=https://github.com/yourcompany
NEXT_PUBLIC_LINKEDIN_URL=https://linkedin.com/company/yourcompany

# ----------------------------------
# Feature Flags
# ----------------------------------
NEXT_PUBLIC_ENABLE_SIGNUP=true
NEXT_PUBLIC_ENABLE_SOCIAL_LOGIN=false
NEXT_PUBLIC_ENABLE_BLOG=true
NEXT_PUBLIC_ENABLE_DOCS=true
NEXT_PUBLIC_ENABLE_DEMO=true

# ----------------------------------
# Email Configuration
# ----------------------------------
# SMTP settings for transactional emails
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@your-domain.com
SMTP_FROM_NAME=BuddyStat

# ----------------------------------
# External Services (Optional)
# ----------------------------------
# Google OAuth (if enabled)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (if enabled)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Stripe (if using paid features)
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics for your own marketing site (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# ----------------------------------
# ClickHouse (Advanced Analytics)
# ----------------------------------
# Leave empty to use PostgreSQL only
CLICKHOUSE_HOST=
CLICKHOUSE_PORT=8123
CLICKHOUSE_USER=
CLICKHOUSE_PASSWORD=
CLICKHOUSE_DATABASE=

# ----------------------------------
# Redis (Optional - for caching)
# ----------------------------------
REDIS_URL=redis://redis:6379

# ----------------------------------
# Storage Configuration
# ----------------------------------
# For session recordings and uploads
STORAGE_TYPE=local
# If using S3:
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ----------------------------------
# Monitoring & Logging
# ----------------------------------
LOG_LEVEL=info
NODE_ENV=production

# Sentry error tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ----------------------------------
# Uptime Monitoring
# ----------------------------------
ENABLE_UPTIME_MONITORING=true
UPTIME_CHECK_INTERVAL=60000

# ----------------------------------
# Rate Limiting
# ----------------------------------
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------
# Advanced Configuration
# ----------------------------------
# Reverse proxy settings
TRUST_PROXY=true

# CORS origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Cookie settings
COOKIE_DOMAIN=.your-domain.com
COOKIE_SECURE=true

# Session configuration
SESSION_MAX_AGE=604800000

# File upload limits (in bytes)
MAX_UPLOAD_SIZE=10485760

# ----------------------------------
# Development Only (Remove in production)
# ----------------------------------
# DEBUG=true
# MOCK_DATA=false
